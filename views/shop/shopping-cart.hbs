<script>
  function reduce() {
    document.getElementById('red').onclick = function() {
    this.qty-=1;
    }
  }
  function remove() {
    document.getElementById('rem').onclick = function() {
      this.qty=0;
    }
  }
  </script>

{{# if products}}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <ul class="list-group">
        {{# each products}}
          <li class="list-group-item">
            <strong>{{this.item.title}}</strong>
            <span class="label label-success">${{ this.price }}</span>
            <span class="badge badge-secondary">{{ this.qty }}</span>
            <p><img src="{{ this.item.imagePath }}" class="card-img-top" alt="..."></p>
            <div class="btn-group">
              <button class="btn btn-primary" onсlick="reduce()" role="button" id='red'>Reduce by 1</button>
              <button class="btn btn-primary" onсlick="remove()" role="button" id='rem'>Remove all</button>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <strong>Total: ${{ totalPrice }}</strong>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <button class="btn btn-success" type="button">Checkout</button>
    </div>
  </div>
{{else}}
  <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
      <h2>No items in cart</h2>
    </div>
  </div>
{{/if}}
